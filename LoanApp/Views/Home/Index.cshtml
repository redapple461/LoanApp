@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<LoanApp.Models.Loan>
<html>
<head>
    <title>  Loan App </title>
</head>
<body>
    <table class="table">
         <tr><th>@Localizer["Home"]</th><th>@Localizer["Profile"]</th></tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Value</td>
                <td>@item.Reason</td>
            </tr>
        }
    </table>
</body>
</html>
