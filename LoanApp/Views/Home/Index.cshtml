@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<LoanApp.Models.Loan>
<html>
<head>
    <title>  Loan App </title>
</head>
<body>
    <table class="table">
         <tr><th>Value</th><th>Reason</th><th>Whom</th><th>Start date</th></tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Value</td>
                <td>@item.Reason</td>
                <td>@item.WhomUserId</td>
                <td>@item.DateOfCreation</td>
            </tr>
        }
        <tr>
            <td>
                <span style="font-weight: bold">Total: </span> @ViewBag.TotalLoan
            </td>
        </tr>
    </table>
</body>
</html>
