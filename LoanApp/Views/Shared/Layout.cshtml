@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<html>
    <style>
        a{
            margin: 15px;
        }
    </style>
    <title>
        Loan App
    </title>
    <body>
        <header>
            <div style="border: 1px solid black">
                <a href="/">@Localizer["Home"]</a>
                <a href="/User/Profile">@Localizer["Profile"]</a>
                <a asp-controller="User" asp-action="Search">@Localizer["Search"]</a>
                <a href="/Loans/AddLoan">@Localizer["Add Loan"]</a>
                <a asp-controller="Auth" asp-action="Logout">@Localizer["Logout"]</a>
            </div>
        </header>
        <div id="main">
            @RenderBody()
        </div>  
    </body>
</html>
